# Combined YES+NO ask threshold — events below this are flagged as arb opportunities
# Set to 1.00 for strict arb, 1.01 to also capture near-arb events
MIN_COMBINED_THRESHOLD=1.00

# How often to refresh the console leaderboard (ms)
STATS_INTERVAL=30000

# CSV output file for individual arb ticks (legacy, kept for reference)
LOG_FILE=arb_log.csv

# CSV output file for completed arb windows (one row per window, with duration + spread stats)
ARB_WINDOWS_LOG=arb_windows.csv

# Human-readable log of arb ticks only — tail -f arb_events.log to watch live arb activity
ARB_EVENTS_LOG=arb_events.log

# Persistent log file — tail -f scanner.log to watch live activity
SCANNER_LOG=scanner.log

# Full tick log — every single tick with UP/DOWN bid+ask. Can get large fast.
FULL_SCANNER_LOG=full_scanner.log

# Verbose mode — logs every computed tick (YES ask, NO ask, combined) to scanner.log
# WARNING: generates a lot of data. Use only for debugging.
VERBOSE=false

# Raw WebSocket log — every raw JSON message from Polymarket written here
# tail -f ws_raw.log to watch the live feed. Leave blank to disable.
WS_RAW_LOG=ws_raw.log

# How often to re-fetch the market list and recompute live/upcoming watched markets (ms)
# Keep low (30s) for seamless transitions between 5-min market windows
MARKET_REFRESH_INTERVAL=30000

# Comma-separated list of timeframe durations to watch
# Add more (e.g. 240-min) to expand coverage
WATCHED_TIMEFRAMES=5-min,15-min

# Minimum number of consecutive arb ticks required to record a window.
# 1 = single-tick flashes are recorded; 2+ = only multi-tick windows count.
# Single-tick windows (0ms duration) are almost always price glitches, not tradeable.
MIN_ARB_TICKS=2
